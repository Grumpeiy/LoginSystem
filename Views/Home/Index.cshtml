@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* General Body Styling */
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* Navbar Styling */
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 40px;
        background: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
    }

    .navbar a {
        text-decoration: none;
        color: #333;
        font-size: 18px;
        margin-left: 15px;
    }

    /* Main Content */
    .container {
        text-align: center;
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
        margin-top: 120px; /* Offset for fixed navbar */
    }

    h1 {
        font-size: 32px;
        font-weight: 600;
        color: #343a40;
    }

    p {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 20px;
    }

    .btn-primary {
        display: inline-block;
        background: linear-gradient(to right, #4facfe, #00f2fe);
        color: white;
        text-decoration: none;
        padding: 12px 20px;
        font-size: 18px;
        border-radius: 8px;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background: linear-gradient(to right, #00f2fe, #4facfe);
        transform: scale(1.05);
    }

    /* Footer Styling */
    .footer {
        text-align: center;
        padding: 15px;
        background: white;
        position: fixed;
        bottom: 0;
        width: 100%;
        box-shadow: 0px -4px 8px rgba(0, 0, 0, 0.1);
    }

    .footer a {
        color: #4facfe;
        text-decoration: none;
        font-weight: bold;
    }
</style>

<!-- Main Content -->
<div class="container">
    <h1>Welcome to Itinerary Planner!</h1>
    <p>Plan your trips efficiently and explore new adventures with ease.</p>
    <a href="/SetTrip" class="btn-primary">Start Planning</a>
</div>
